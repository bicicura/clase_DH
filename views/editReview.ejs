<%- include partials/header %>

<title>Editar Reseña</title>

<link rel="stylesheet" href="/stylesheets/detail.css"/>
<br>
<div class="Afuera">
    <div class="Adentro Editar">
        <form id="formlogin" method="POST" action="/usuarios/reviews/edit/<%= resultado.id %>">
        <h1 style="color: black;">Editar Reseña</h1>

        <div>
            <div>
                <span></span>
                <input type="text" name="email" id="email" placeholder="email...">
            </div>
        </div>

        <div>
            <div>
                <span></span>
                <input type="password" name="password" id="pass" placeholder="password...">
            </div>
        </div>
    <br>
        <div>
            <div>
                <textarea class="" value="" cols="50" rows="3" name="text_review" id="text_review" ><%= 
                resultado.text_review %></textarea>
            </div>

    <div class="uk-margin">
        <select class="uk-select" name="rate">
          <option value="" disabled selected>Puntaje...</option><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option>
        </select>
    </div>

    <button type="submit" name="button">Confirm</button>
    </form>
    </div>
</div>
<br>

<script>
    let query = new URLSearchParams(location.search)
    let error = query.get('error')
    if (error == "true") {
        alert('Error: Usuario o Contraseña incorrecta')
    }
</script>

