<%- include partials/header %>

<title>Editar Resenia</title>

<div>
    <div>
        <form id="formlogin" method="POST" action="/usuarios/reviews/edit/<%= resultado.id %>">
        <h1 style="color: black;">Edit Review</h1>

        <div>
            <div>
                <span></span>
                <input type="text" name="email" id="email" placeholder="email...">
            </div>
        </div>

        <div>
            <div>
                <span></span>
                <input type="password" name="password" id="pass" placeholder="password...">
            </div>
        </div>

        <div>
            <div>
                <label>Review</label>
                <textarea class="" value="" cols="50" rows="3" name="text_review" id="text_review" ><%= 
                resultado.text_review %></textarea>
            </div>
        </div>
        <label for="review">Puntaje</label>
        <input type="range" name="rating" id="points" class="uk-range" min="0" max="10"
        onchange="updateValue(this.value)">
        <p id="valorRange" style="color: black;"> <%= resultado.rating%> </p>
    </div>

    <button type="submit" name="button">Confirm</button>
    </form>
    </div>
</div>

<script>
    let query = new URLSearchParams(location.search)
    let error = query.get('error')
    if (error == "true") {
        alert('Error: Usuario o Contrase√±a incorrecta')
    }
</script>

